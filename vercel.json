{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://mastermail.live"
  },
  "domains": ["mastermail.live"],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "super-mail.vercel.app"
        }
      ],
      "destination": "https://mastermail.live/$1",
      "permanent": true
    }
  ]
}
